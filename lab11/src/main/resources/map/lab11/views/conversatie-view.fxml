<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="map.lab11.controller.ConversatieController">
    <children>
        <TableView fx:id="messageTableView" layoutX="50.0" layoutY="50.0" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="expeditor" prefWidth="70" text="Expeditor"/>
                <TableColumn fx:id="idm" prefWidth="70.0" text="ID mesaj"/>
                <TableColumn fx:id="mesaj" prefWidth="260" text="Mesaj"/>
                <TableColumn fx:id="dataT" prefWidth="150" text="Data trimiterii"/>
                <TableColumn fx:id="replyId" prefWidth="50" text="Reply"/>
            </columns>
        </TableView>
        <TextField fx:id="text" layoutX="50.0" layoutY="320.0" prefHeight="30.0" prefWidth="200.0" promptText="Scrie..."/>
        <Button layoutX="250.0" layoutY="320.0" mnemonicParsing="false" onAction="#onClickTrimite" prefHeight="30.0" prefWidth="60.0" text="Trimite"/>
        <Button layoutX="590.0" layoutY="320.0" mnemonicParsing="false" onAction="#onClickRefresh" prefHeight="30.0" prefWidth="60.0" text="Refresh"/>
    </children>
</AnchorPane>
